@*<div style="background-image: url('https://d1tgh8fmlzexmh.cloudfront.net/ccbp-responsive-website/foodmunch-banner-bg.png');background-repeat:no-repeat;background-position:center;width:100vw;height:100vh;margin:auto;">*@

<form method="post">
    <div class="border p-3 mt-4 container  align-self-center align-items-center" style="width:40%">

        <div style="vertical-align:middle" class="align-items-center">
            @if(ViewBag.NotExist == "User Not Exist")
            {
                <p class="text-danger">User Does not Exist</p>
            }
            @if(ViewBag.IncorrectPassword == "Incorrect Password")
            {
                <p class="text-danger">Incorrect Password</p>
            }
            <h3>Log in</h3>
            <br />
            <div class="mb-3">
                @*<label asp-for="UserName"></label>*@
                <input asp-for="UserName" placeholder="User Name" class="form-control" style="width:100%"/>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

             <div class="mb-3">
                @*<label asp-for="Password"></label>*@
                <input asp-for="Password" placeholder="Password" class="form-control" style="width:100%"/>
            </div>
            
            <button type="submit" class="btn btn-outline-primary" style="width : 100%" >Log in</button>

            <p>New to Zomato? <a asp-controller="FoodSite" asp-action="CreateAccount" class="text-danger">Sign up</a></p>

        </div>

      
        
    </div>

</form>
</div>
